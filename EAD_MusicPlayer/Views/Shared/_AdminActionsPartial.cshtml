@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using EAD_MusicPlayer.Data.DomainModels
@inject SignInManager<User> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Songs" asp-page="/Songs/Index" title="Manage">Коллекция</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Songs" asp-page="/Playlists/PlaylistManagement" title="Manage">Плейлисты</a>
            </li>
        </ul>
    }
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Songs" asp-page="/Authors/AddAuthor" title="Manage">Авторы</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Songs" asp-page="/Genres/AddGenres" title="Manage">Жанры</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Songs" asp-page="/Songs/AddSong" title="Manage">Добавить трек</a>
        </li>
    }
</ul>